<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvTipoSolicitudDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recogida de documentos - #0001"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/tvPrioridadDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad: Alta"
            android:textColor="@color/teal_700"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvFechaInicioDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de inicio: 2025-02-26"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvClienteDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: Valorant SAS"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDestinatarioDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destinatario: Juan Diego Lara"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDireccionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección: Blas de Lezo, mnz 10, lte 17"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescripcionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción: Carpeta agosto 2024"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
