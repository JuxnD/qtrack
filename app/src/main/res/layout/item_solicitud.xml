<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/solicitudNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃºmero de Solicitud: 0031"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: CICAVB CARTAGENA"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/tvTipoSolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Recogida de documentos"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: Nombre Cliente"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPrioridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad: Alta"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio: 2025-02-04"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/estatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estatus: Abierto"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textColor="#4CAF50" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
